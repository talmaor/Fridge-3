<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:id="@+id/user_name"
    android:gravity="left"
    android:orientation="vertical"
    android:background="@color/background">


    <TextView
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:text="@string/fridge_app"
        android:id="@+id/fridge_app"
        android:textColor="@android:color/white"
        android:textSize="30dip"
        android:layout_marginTop="50dp"
        android:gravity="center" />

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:layout_weight="0.32"
        android:background="@color/loginColor"
        android:layout_gravity="center">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_name_view"
            android:layout_gravity="center_vertical|left"
            android:text="@string/user_name_view"
            android:textColor="@android:color/black"
            android:textSize="20dip"
            android:layout_row="0"
            android:layout_column="0"
            android:gravity="center" />

        <EditText
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/user_name_text"
            android:layout_gravity="center_vertical|left"
            android:focusable="true"
            android:enabled="true"
            android:accessibilityLiveRegion="1"
            android:layout_row="0"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/password_view"
            android:layout_gravity="center_vertical|left"
            android:text="@string/password_view"
            android:textColor="@android:color/black"
            android:textSize="20dip"
            android:layout_row="1"
            android:layout_column="0"
            android:gravity="center" />

        <EditText
            android:layout_width="232dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password_text"
            android:focusable="true"
            android:enabled="true"
            android:accessibilityLiveRegion="2"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="left|top" />

        <Button
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:text="@string/register_button"
            android:id="@+id/register_button"
            android:layout_gravity="center_vertical|right|top"
            android:clickable="true"
            android:onClick="onRegister"
            android:focusable="true"
            style="@style/button_text"
            android:layout_column="1"
            android:layout_row="3" />

        <Button
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:text="@string/login_button"
            android:id="@+id/login_button"
            android:clickable="true"
            android:onClick="onLogin"
            style="@style/button_text"
            android:focusable="true"
            android:layout_gravity="center_vertical|right"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_marginTop="20dp" />

    </GridLayout>
</LinearLayout>