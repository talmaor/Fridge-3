<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.fridge.DisplayRegisterActivity"
    android:background="@color/background"
    android:orientation="vertical"
    android:weightSum="1">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:id="@+id/register_title"
        android:text="@string/register_title"
        android:textColor="@android:color/white"
        android:textSize="25dip"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_weight="0.20"
        android:password="false" />

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="293dp"
        android:layout_gravity="center"
        android:background="@color/registerColor"
        >

        <TextView android:text="@string/register_name_view" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register_name_view"
            android:textColor="#ff020202"
            android:textSize="20dip"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center" />

        <EditText
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:id="@+id/register_name_text"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_row="0"
            android:layout_column="1" />

        <TextView
            android:text="@string/register_password_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register_password_view"
            android:textColor="#ff020202"
            android:textSize="20dip"
            android:layout_gravity="center"
            android:layout_row="1"
            android:layout_column="0" />

        <EditText
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/register_password_text"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_row="1"
            android:layout_column="1"
            android:password="true" />

        <TextView
            android:text="@string/register_group_id_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register_group_id_view"
            android:textColor="#ff020202"
            android:textSize="20dip"
            android:layout_gravity="center"
            android:layout_row="2"
            android:layout_column="0" />

        <EditText
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:id="@+id/register_group_id_text"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_row="2"
            android:layout_column="1" />

        <Button
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:text="@string/new_user_register_button"
            android:id="@+id/new_user_register_button"
            android:layout_gravity="center_vertical|right"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_marginRight="40dp"
            style="@style/button_text" />
    </GridLayout>

</LinearLayout>
